

@model IEnumerable<Setting>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p style="padding-top:10px;padding-left:10px;">
    <a style="
     background-color: gray;
     display: inline-block;
     text-decoration: none;
     height: 30px;
     width: 120px;
     color: white;
     text-align: center;
     border-radius: 14px;
     padding-top: 4px;"
       asp-action="Create">
        Create New
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Key
                </td>
                <td>
                    @item.Value
                </td>
                <td>
                    <a style=" text-decoration: none; color: red;" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a style=" text-decoration: none; color: orange;" asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                    <a style=" text-decoration: none; color: red;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>