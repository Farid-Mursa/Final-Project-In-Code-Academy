
@model LoginVM
<section id="loginSection">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 gy-2">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="login">
                        <div class="title">
                            <h4>Sign In</h4>
                        </div>
                        <div class="input">
                            <div class="email">
                                <label asp-for="Username">Username:</label><br>
                                <input asp-for="Username">
                            </div>
                            <div class="password">
                                <label asp-for="Password">Password:</label><br>
                                <input asp-for="Password">
                            </div>
                            <div class="remember" style="display: flex; ">
                                <label style="color: #666;
                                        cursor: pointer;
                                        font-family: 'Rubik', sans-serif; margin-top: 10px;" asp-for="RememberMe">Remember Me:</label><br>
                                <input asp-for="RememberMe" style="margin-left: 10px; margin-top: 10px; ">
                            </div>
                        </div>
                        <div class="forgotPassword">
                            <a asp-controller="Account" asp-action="Forgot" style="text-decoration: none; color: #666; font-family: 'Rubik', sans-serif; ">

                                <p>Forgot your password?</p>

                            </a>

                        </div>

                        <div class="button">
                            <button type="submit" style="width: 160px;
                            height: 35px;
                            border-radius: 20px;
                            font-size: 13px;
                            border: none;
                            background-color: #444;
                border-color: #444;
                color: #fff;" >
                                SIGN IN
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6 gy-2">
                <div class="transfer" style="height: 377px;">
                    <div class="title">
                        <h4>New Customer?</h4>
                    </div>
                    <div class="text">
                        <p>Create an account with us and you'll be able to:</p>
                        <ul>
                            <li>Check out faster</li>
                            <li>Save multiple shipping addresses</li>
                            <li>Access your order history</li>
                            <li>Track new orders</li>
                            <li>Save items to your Wish List</li>
                        </ul>
                    </div>
                    <div class="button">
                        <a href="./registration.html">
                            CREATE ACCOUNT
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>