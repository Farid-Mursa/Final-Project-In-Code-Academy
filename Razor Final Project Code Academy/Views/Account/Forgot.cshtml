
@model ForgotVM
<section id="loginSection">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <form asp-controller="Account" asp-action="Forgot" method="post">
                    <div class="login">
                        <div class="title">
                            <h4>Sign In</h4>
                        </div>
                        <div class="input">
                            <div class="email">
                                <label asp-for="User.Email">Email:</label><br>
                                <input asp-for="User.Email">
                            </div>
                        </div>
              
                        <div class="button">
                            <button type="submit" style="width: 160px;
                            height: 35px;
                            border-radius: 20px;
                            font-size: 13px;
                            border: none;
                            background-color: #444;
                border-color: #444;
                color: #fff; margin-top:15px;">
                                Send Email
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            </div>
        </div>
    </section>
