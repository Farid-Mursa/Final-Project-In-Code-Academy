
    @model ForgotVM
    <section id="loginSection">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <form asp-controller="Account" asp-action="RestartPassword" method="post">
                        <div class="login">
                            <div class="title">
                                <h4>Reset Password</h4>
                            </div>

                            <div class="input">
                                <div class="email">
                                    <label >New Password:</label><br>
                                    <input asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="input d-none">
                                <div class="email">
                                    <input asp-for="Token"><br>
                                    <input asp-for="User.Email">
                                </div>
                            </div>

                           <div class="input">
                               <div class="email" style="margin-top:15px;">
                                   <label>Confim Password:</label><br>
                                   <input asp-for="ConfirmPassword">
                                   <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                               </div>
                            </div>

                            <div class="button">
                                <button type="submit" style="width: 160px;
                            height: 35px;
                            border-radius: 20px;
                            font-size: 13px;
                            border: none;
                            background-color: #444;
                border-color: #444;
                color: #fff; margin-top:15px;" >
                                   Submit
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                </div>
            </div>
        </section>