@inject Razor_Final_Project_Code_Academy.Service.LayoutService _layoutServices

@{
    List<Category> categories = _layoutServices.AllCategories();
    List<Brand> Brands = _layoutServices.AllBrands();
    User user = _layoutServices.AllUsers();
    List<BasketItem> basketItem = _layoutServices.BaskeItem();
    List<Accessory> accessories = _layoutServices.Accessories();
    List<Product> products = _layoutServices.Products();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css//owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/assets/slick-1.8.1/slick/slick-theme.css">
    <link rel="stylesheet" href="~/assets/slick-1.8.1/slick/slick.css">
    <link rel="stylesheet" href="~/assets/css/main.css">
    <title>Razor Home</title>
</head>
<body>

    <header id="MainHeader" class="d-lg-block d-none">
        <div class="upper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="info">
                            <p>Free International Shipping. No Minimum Purchase Required <span>*</span> </p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <ul class="nav">
                            <li class="login">
                                My Account
                                <i class="fa-solid fa-chevron-down"></i>
                                <div class="panel d-none">
                                    <ul>
                                        @if (User.Identity.IsAuthenticated)
                                        {

                                            <li><a href="./accountOrders.html">Orders</a></li>
                                            <li><a href="./accountAdress.html">Adress</a></li>
                                            <li><a asp-controller="account" asp-action="AccountDetails">Account Settings</a></li>
                                            <li>
                                                <a asp-controller="Account" asp-action="LogOut">
                                                    <div class="SignOut">
                                                        <span>
                                                            <i class="fa-solid fa-right-from-bracket"></i>
                                                        </span>
                                                        <span>
                                                            Sign Out
                                                        </span>
                                                    </div>
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li><a asp-controller="Account" asp-action="login">Sign in</a></li>
                                            <li><a asp-controller="Account" asp-action="Register" >Register</a></li>
                                        }

                                    </ul>
                                </div>
                                <div class="empty d-none">

                                </div>
                            </li>
                            <li><a asp-controller="Wishlist" asp-action="Index">Wish List</a></li>
                            <li><a href="./order.html">Check out</a></li>
                            <li class="price">
                                <div class="usd">
                                    <img src="~/assets/images/valute/us.gif" alt="">
                                    USD
                                </div>

                                <div class="au d-none">
                                    <img src="~/assets/images/valute/au.webp" alt="">
                                    AUD
                                </div>

                                <i class="fa-solid fa-chevron-down"></i>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="middle">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="logo">
                            <a asp-controller="Home" asp-action="Index"> <img src="~/assets/images/HeaderLogo/logo-2_1553586230__63532.original.png" alt=""></a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input">
                            <input type="text" placeholder="Search the store">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="icons">
                            <div class="accountIcon">
                                <div class="icon">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                                <div class="text">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <div class="signIn">
                                            <span class="hello">Welcome Dear</span>
                                            <span class="account">@user.UserName</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="signOut">
                                            <span class="hello">Hello, Sign In</span>
                                            <span class="account">My Account</span>
                                        </div>
                                    }


                                </div>

                                <div class="panelMyAcc d-none">
                                    <ul>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li><a href="./accountOrders.html">Orders</a></li>
                                            <li><a href="./accountAdress.html">Adress</a></li>
                                            <li><a asp-controller="account" asp-action="AccountDetails">Account Settings</a></li>
                                            <li>
                                                <a asp-controller="Account" asp-action="LogOut">
                                                    <div class="SignOut">
                                                        <span>
                                                            <i class="fa-solid fa-right-from-bracket"></i>
                                                        </span>
                                                        <span>
                                                            Sign Out
                                                        </span>
                                                    </div>
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li><a  asp-controller="Account" asp-action="login">Sign in</a></li>
                                            <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                                        }


                                    </ul>
                                </div>
                                <div class="emptyMyAcc d-none">

                                </div>
                            </div>
                            <div class="basketIcon">
                                <div class="icon">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </div>
                                <div class="text">
                                    <span class="cards">My Card</span>
                                    <span class="item">@basketItem.Count- items - $ @(basketItem.Sum(x=>x.SaleQuantity * x.UnitPrice))</span>
                                </div>

                                <div class="panelBasketItems d-none">
                                    @foreach (var item in basketItem.Where(x=>x.IsAccessuar==false))
                                    {
                                        Product? product = products.FirstOrDefault(x => x.Id == item.ProductRamMemory.ProductId);
                                        <ul>
                                            <li>
                                                <div class="product">
                                                    <div class="image">
                                                        <img src="~/assets/images/Product/@product.ProductImages.FirstOrDefault(x=>x.IsMain==true)?.Image" alt="">
                                                    </div>
                                                    <div class="about">
                                                        <div class="name">
                                                            <a asp-controller="Shop" asp-action="DetailPhone" asp-route-id="@product.Id">@product.Name</a>
                                                        </div>
                                                        <div class="priceCount">
                                                            <span class="">
                                                                @item.SaleQuantity x $@item.UnitPrice
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="iconDelete" style="font-size: 14px;margin-left: 35px;">

                                                        <a asp-controller="Basket" asp-action="DeletBasketItem" asp-route-basketItemId="@item.Id" style="text-decoration:none; color: #666;">
                                                            <i class="fa-solid fa-trash"></i>
                                                        </a>

                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    }
                                    @foreach (var item in basketItem.Where(x=>x.IsAccessuar==true))
                                    {
                                        Accessory? product = accessories.FirstOrDefault(x => x.Id == item.AccessoryColor.AccessoryId);
                                        <ul>
                                            <li>
                                                <div class="product">
                                                    <div class="image">
                                                        <img src="~/assets/images/Product/@product.AccessoryImages.FirstOrDefault(x=>x.IsMain==true)?.Image" alt="">
                                                    </div>
                                                    <div class="about">
                                                        <div class="name">
                                                            <a asp-controller="Shop" asp-action="DetailPhone" asp-route-id="@product.Id">@product.Name</a>
                                                        </div>
                                                        <div class="priceCount">
                                                            <span class="">
                                                                @item.SaleQuantity x $@item.UnitPrice
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="iconDelete" style="font-size: 14px;margin-left: 35px;">

                                                        <a asp-controller="Basket" asp-action="DeletBasketItem" asp-route-basketItemId="@item.Id" style="text-decoration:none; color: #666;">
                                                            <i class="fa-solid fa-trash"></i>
                                                        </a>

                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    }
                                    <div class="buttons">
                                        <div class="goOrder">
                                            <a asp-controller="Order" asp-action="Index">
                                                CHECK OUT NOW
                                            </a>
                                        </div>
                                        <div class="goCart">
                                            <a asp-controller="Basket" asp-action="BasketCart">
                                                VIEW CART
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="emptyBasketItems d-none">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="bottom">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="categories">
                            <div class="allCategory">
                                <span>CATEGORIES</span>
                            </div>
                            <div class="icon">
                                <i class="fa-solid fa-bars"></i>
                            </div>
                            <div class="panelCategory">
                                <ul>

                                    @foreach (var item in categories)
                                    {
                                        <li><a href="">@item.Name</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <nav class="col-lg-8">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">HOME</a></li>
                            <li><a asp-controller="Page" asp-action="Index">PAGES</a></li>
                            <li><a asp-controller="Contact" asp-action="Index">CONTACT US</a></li>
                            <li><a asp-controller="Shop" asp-action="Index">SHOP</a></li>

                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <header id="secondaryHeader" class="d-lg-none">
        <div class="container">
            <div class="row">
                <div class="upperRow">
                    <div class="col-3">
                        <div class="menu">
                            <i class="fa-solid fa-bars"></i>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="image">
                            <img src="~/assets/images/HeaderLogo/logo-2_1553586230__63532.original.png" alt="">
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="basketIcon">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <div class="item">
                                <span>0</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bottomRow">
                    <div class="col-12">
                        <div class="inputDiv">
                            <input type="text" placeholder="Search the store">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hamburgerMenu d-none">
            <div class="container">
                <ul>
                    <li><a href="">Phones</a></li>
                    <li><a href="">Watchs</a></li>
                    <li><a href="">Cases</a></li>
                    <li><a href="">Accsesuar</a></li>
                    <li><a href="">More</a></li>
                </ul>
            </div>
        </div>
    </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    <footer>
        <div class="upper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="logo-info">
                            <div class="logo">
                                <img src="~/assets/images/HeaderLogo/logo-2_1553586230__63532.original.png" alt="">
                            </div>
                            <div class="adress">
                                <div class="ear">
                                    <div class="earpods">
                                        <img src="~/assets/images/footerImages/icon-phone.png" alt="">
                                    </div>
                                    <div class="text">
                                        <ul>
                                            <li class="hot">Hotline Free 24/24:</li>
                                            <li class="phone"><a href="(1800)-000-6890">(1800)-000-6890</a></li>
                                        </ul>
                                    </div>
                                </div>

                                <address>
                                    Addresses : Acme Widgets 123 Widget Street Acmeville, AC 12345 United States of
                                    America
                                </address>

                                <div class="email">
                                    <p>Email: <a href="">contact@ibigecommerce.com</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="information d-lg-block d-none">
                            <div class="title">
                                <h4>Information</h4>
                            </div>
                            <div class="nav">
                                <ul>
                                    <li><a asp-controller="Page" asp-action="Index">Pages</a></li>
                                    <li><a asp-controller="Contact" asp-action="Index">Contact Us</a></li>
                                    <li><a asp-controller="Account" asp-action="AccountDetails">Account Settings</a></li>
                                    <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="brands d-lg-block d-none">
                            <div class="title">
                                <h4>Brands</h4>
                            </div>
                            <div class="nav">
                                <ul>
                                    @foreach (var item in Brands)
                                    {
                                        <li><a asp-controller="Shop" asp-action="Index">@item.Name</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="categories d-lg-block d-none">
                            <div class="title">
                                <h4>Categories</h4>
                            </div>
                            <div class="nav">
                                <ul>
                                    @foreach (var item in categories)
                                    {
                                        <li><a href="">@item.Name</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="accordionFooter d-block d-lg-none">

