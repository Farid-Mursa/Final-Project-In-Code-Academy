@model List<Product>

@foreach (var item in Model)
{
    if (item.Count >= 5)
    {

        <li>
            <a href="">
                <div class="image">
                    <img style="width:90px; height:90px; object-fit:contain;" src="~/assets/images/Product/@item.ProductImages.FirstOrDefault(x=>x.IsMain==true)?.Image" alt="">
                </div>
                <div class="text-price">
                    <div class="text">
                        <p>@item.Name</p>
                    </div>

                    @if (item.Discount == 0)
                    {
                        <div class="price">
                            <div class="RealPrice">
                                <span>$@item.Price</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="price">
                            <div class="discountPrice">
                                <span>$@item.Price</span>
                            </div>
                            <div class="RealPrice">
                                <span>$@item.DiscountPrice</span>
                            </div>
                        </div>
                    }

                </div>
            </a>
        </li>
    }
}